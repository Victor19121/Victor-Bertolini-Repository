/*
17. Faça um programa que calcule e mostre a área de um trapézio. Sabe-se que:
*/

#include <stdio.h>
#include <math.h>

int main(){
    float base_maior, base_menor, altura, area;
    printf("Digite a base maior: \n");
    scanf("%f", &base_maior);
    
    printf("Digite a base menor: \n");
    scanf("%f", &base_menor);
    
    printf("Digite a altura: \n");
    scanf("%f", &altura);
    
    if (base_maior < 0 || base_menor < 0 || altura < 0) 
    {
        printf("Números digitados inválidos.");
    }
    else
    {
        area = ((base_maior + base_menor) * altura) / 2;
        printf("A área do trapézio é: %.2f", area);
    }

    
    
    
    return 0;
    
}
