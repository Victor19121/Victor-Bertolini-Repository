//5. Faça um programa que receba um número inteiro e verifique se este número é par ou ímpar.
#include <stdio.h>
#include <math.h>

int main() {
    int num;
    printf("Digite um número: ");
    scanf("%d", &num);
    
    if (num % 2 == 0) {
        printf("A número digitado é par\a", num);
        
    } else {
        printf("O número digitado é ímpar");
    }
    
    return 0;
}
