 /*
35. Leia uma data e determine se ela é válida. Ou seja, verifique se o mês está entre 1 e 12, e
se o dia existe naquele mês. Note que Fevereiro tem 29 dias em anos bissextos, e 28 dias em
anos não bissextos.
*/
#include <stdio.h>

int 
main() 
{
    int dia, mes, ano, bissexto;
    
    
    printf("Digite o ano: ");
    scanf("%d", &ano);
        
    printf("Digite o mes: ");
    scanf("%d", &mes);
        
    printf("Digite o dia: ");
    scanf("%d", &dia);
    
    if (!(mes > 0 && mes <=12 && ano > 0))
    {
        printf("A data escolhida não é válida!");
    }
    else
    {
        //verificar se o ano é bissexto
        if (ano % 400 == 0 || (ano % 4 == 0 && ano % 100 == 0))
        {
            bissexto = 1;
        }
        //Seleção para cada mês
        switch(mes)
        {
            //Janeiro
            case 1:
            if (dia > 0 && dia <= 31)
            {
                printf("A data é válida!");
            }
            break;
            //Fevereiro
            case 2:
            if (dia > 0 && dia <= 29)
            {
                if (bissexto == 1)
                {
                    printf("A data é válida!");
                }
                else
                {
                    if (dia <= 28)
                    {
                        printf("A data é válida");
                    }
                    else
                    {
                        printf("A data não é válida!");
                    }
                    
                }
            }
            
            break;
            //Março
            case 3:
            if (dia > 0 && dia <= 31)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
            //Abril
            case 4:
            if (dia > 0 && dia <= 30)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
            //Maio
            case 5:
            if (dia > 0 && dia <= 31)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
            //Junho
            case 6:
            if (dia > 0 && dia <= 30)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
            //Julho
            case 7:
            if (dia > 0 && dia <= 31)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
            //Agosto
            case 8:
            if (dia > 0 && dia <= 31)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
            //Setembro
            case 9:
            if (dia > 0 && dia <= 30)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
            //Outubro
            case 10:
            if (dia > 0 && dia <= 31)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
            //Novembro
            case 11:
            if (dia > 0 && dia <= 30)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
            //Dezembro
            case 12:
            if (dia > 0 && dia <= 31)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
        }
    }
    return 0;
}
