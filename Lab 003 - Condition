//30. Faça um programa que receba três números e mostre-os em ordem crescente.
#include <stdio.h>

int 
main() 
{
    int num1, num2, num3;
    
    printf("Digite um número: ");
    scanf("%d", &num1);
    
    printf("Digite um número: ");
    scanf("%d", &num2);
    
    printf("Digite um número: ");
    scanf("%d", &num3);
    
    if (num1 > num2 && num1 > num3)
    {
        if (num2 > num3)
        {
            printf("a ordem correta é: %d %d %d", num1, num2, num3);
        }
        else if (num3 > num2)
        {
            printf("a ordem correta é: %d %d %d", num1, num3, num2);
        }
    }
    
    if (num2 > num1 &&  num2 > num3)
    {
        if (num1 > num3)
        {
            printf("a ordem correta é: %d %d %d", num3, num1, num3);
        }
        else if (num3 > num1)
        {
            printf("a ordem correta é: %d %d %d", num2, num3, num1);
        }
    }
    
    if (num3 > num1 && num3 > num2)
    {
        if (num1 > num2)
        {
            printf("a ordem correta é: %d %d %d", num3, num1, num2);
        }
        else if (num2 > num1)
        {
            printf("a ordem correta é: %d %d %d", num3, num2, num1);
        }
    }
    

    return 0;
}
