 /*
34. Leia a nota e o número de faltas de um aluno, e escreva seu conceito. De acordo com a tabela
abaixo, quando o aluno tem mais de 20 faltas ocorre uma redução de conceito.
*/
#include <stdio.h>

int 
main() 
{
    float nota, falta;
    char letra;
    
    printf("Digite a nota do aluno: \n");
    scanf("%f", &nota);
    
    printf("Digite o número de faltas do aluno: \n");
    scanf("%f", &falta);
    
    if (nota >= 9 && nota < 10.0)
    {
        letra = 65;
    }
    
    if (nota >= 7.5 && nota < 9)
    {
        letra = 66;
    }
    
    if (nota >= 5 && nota < 7.5)
    {
        letra = 67;
    }
    
    if (nota >= 7.5 && nota < 9)
    {
        letra = 68;
    }
    
    if (nota >= 4 && nota < 5)
    {
        letra = 69;
    }
    
    if (nota < 4)
    {
        letra = 70;
    }
        
    if (falta >= 20)
    {
        printf("O conceito do Aluno é: %c", letra + 32);
    }
    else
    {
        printf("O conceito do Aluno é: %c", letra);
    }
    return 0;
}
