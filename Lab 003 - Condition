            case 8:
            if (dia > 0 && dia <= 31)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
            //Setembro
            case 9:
            if (dia > 0 && dia <= 30)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
            //Outubro
            case 10:
            if (dia > 0 && dia <= 31)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
            //Novembro
            case 11:
            if (dia > 0 && dia <= 30)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
            //Dezembro
            case 12:
            if (dia > 0 && dia <= 31)
            {
                printf("A data é válida!");
            }
            else
            {
                printf("A data não é válida!");
            }
            break;
        }
    }
    return 0;
}
